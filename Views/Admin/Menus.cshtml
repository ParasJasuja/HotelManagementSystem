@model IEnumerable<HotelManagementSystem.Models.Menu>

@{
    ViewData["Title"] = "Menus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="MenuCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MenuType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MenuName)
            </td>
            <td>
                <a asp-action="MenuEdit" asp-route-id="@item.MenuId">Edit</a> |
                <a asp-action="MenuDetails" asp-route-id="@item.MenuId">Details</a> |
                <a asp-action="MenuDelete" asp-route-id="@item.MenuId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
