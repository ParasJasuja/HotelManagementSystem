@model IEnumerable<HotelManagementSystem.Models.Room>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="RoomCreate">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomCharges)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOpen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomCharges)
            </td>
            <td>
                @if (item.IsOpen)
                    {
                        <div style="width:20px; height:20px;" class="m-auto rounded-circle bg-success"></div>
                    }
                    else
                    {
                        <div style="width:20px; height:20px;" class="m-auto rounded-circle bg-danger"></div>
                    }
            </td>
            <td>
                    @if (item.isActive)
                    {
                        <div style="width:20px; height:20px;" class="m-auto rounded-circle bg-success"></div>
                    }
                    else
                    {
                        <div style="width:20px; height:20px;" class="m-auto rounded-circle bg-danger"></div>
                    }
                </td>
            <td>
                <a asp-action="RoomEdit" asp-route-id="@item.RoomNo">Edit</a> |
                <a asp-action="RoomDetails" asp-route-id="@item.RoomNo">Details</a> |
                <a asp-action="RoomDelete" asp-route-id="@item.RoomNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
