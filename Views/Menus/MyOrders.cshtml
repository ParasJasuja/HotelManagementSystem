@model IEnumerable<HotelManagementSystem.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>My Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menu.MenuName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menu.MenuPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.MenuName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Menu.MenuPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>*@
                <a asp-action="MyOrderDetails" asp-route-id="@item.OrderId">Details</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
