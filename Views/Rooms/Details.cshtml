@model HotelManagementSystem.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Room Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomCharges)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomCharges)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsOpen)
        </dt>
        <dd class = "col-sm-10">
            
                            @if (Model.IsOpen)
                            {
                                <div style="width:20px; height:20px;" class="rounded-circle bg-success"></div>
                            }
                            else
                            {
                                <div style="width:20px; height:20px;" class="rounded-circle bg-danger"></div>
                            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary m-lg-3 m-sm-1" asp-action="BookRoom" asp-route-id="@Model.RoomNo">Book Room</a>
</div>
